<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>

    <!-- Bootstrap CSS WAJIB di head -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <!-- BACKGROUND FULL -->
    <div class="container-fluid px-0" style="background-color:#EFF8FF;">

        <!-- ISI KONTEN -->
        <div class="container py-4">

            <h1 class="mb-4">
                JOIN CRUD (Create, Read, Update, Delete)
            </h1>


            <!-- BUTTON FULL WIDTH -->
            <a href="/add" class="btn btn-primary w-100 mb-4">
                Create
            </a>


            <!-- TABLE -->
            <table class="table table-striped">
                <thead class="table-light text-center">
                    <tr>
                        <th>No.</th>
                        <th>Name</th>
                        <th>Height</th>
                        <th>Weight</th>
                        <th>Birth Date</th>
                        <th>Is Married</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <% users.forEach((user, index) => { %>
                    <tr class="text-center">
                        <td>
                            <%= index + 1 %>
                        </td>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.height %> cm</td>
                        <td>
                            <%= user.weight %> kg</td>
                        <td>
                            <%= user.birthdate %>
                        </td>
                        <td>
                            <%= user.married ? 'Yes' : 'Not Yet' %>
                        </td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <!-- UPDATE -->
                                <a href="/edit/<%= user.id %>" class="btn btn-success btn-sm">
                                Update
                            </a>
                                <!-- DELETE -->
                                <form action="/delete/<%= user.id %>" method="POST" onsubmit="return confirm('Yakin mau hapus data ini?');">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </table>

        </div>
    </div>

</body>

</html>